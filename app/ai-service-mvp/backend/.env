# AI Service Marketplace MVP - Environment Configuration
# Copy this file to .env and fill in your values

# ============= Application =============
APP_NAME="AI Service Marketplace"
APP_VERSION="1.0.0"
DEBUG=true

# ============= Database =============
# PostgreSQL connection (optional for MVP - uses in-memory storage)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_service_mvp

# ============= Security =============
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============= CORS =============
# Comma-separated list of allowed origins (используйте defaults в config.py)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# ============= AI Services =============
# OpenAI API Key (optional - MVP uses rule-based processing)
OPENAI_API_KEY=

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=

# ============= Telegram Bot =============
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# ============= Payment Gateway =============
# YooKassa credentials (https://yookassa.ru)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# ============= Redis =============
# Optional - for caching and task queue
REDIS_URL=redis://localhost:6379/0

# ============= Platform Settings =============
# Commission rate (0.25 = 25%)
PLATFORM_COMMISSION_RATE=0.25

# Job cost limits (RUB)
MINIMUM_JOB_COST=500.0
MAXIMUM_JOB_COST=50000.0

# ============= Master Settings =============
# How long to wait for master response (minutes)
MASTER_RESPONSE_TIMEOUT_MINUTES=15

# Maximum jobs per master per day
MAX_MASTER_DAILY_JOBS=10

# ============= File Storage =============
MEDIA_STORAGE_PATH=./media
MAX_UPLOAD_SIZE_MB=10

# ============= Maps & Location =============
# Yandex Maps API (optional)
YANDEX_MAPS_API_KEY=

# ============= SMS/Phone Verification =============
# SMS provider API key (optional)
SMS_PROVIDER_API_KEY=
